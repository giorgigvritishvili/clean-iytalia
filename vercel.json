{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/index.js" },
    { "src": "/health", "dest": "/api/health.js" },
    { "src": "^/admin$", "dest": "/public/admin.html" },
    { "src": "^/$", "dest": "/public/index.html" },
    { "src": "^/(.*)$", "dest": "/public/$1" }
  ]
}
